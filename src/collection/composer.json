{
    "name": "aeon-php/collection",
    "type": "library",
    "description": "Aeon Collection",
    "keywords": [
        "calendar",
        "immutable",
        "date",
        "time",
        "datetime"
    ],
    "require": {
        "php": "~8.1.10 || ~8.2",
        "aeon-php/calendar": "~1.0"
    },
    "require-dev": {
        "ext-bcmath": "*"
    },
    "suggest": {
        "ext-bcmath": "Compare time units with high precision"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aeon\\": [
                "src/Aeon"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeon\\Collection\\Tests\\": "tests/Aeon/Collection/Tests/"
        }
    },
    "scripts": {
        "benchmark": [
            "Composer\\Config::disableProcessTimeout",
            "tools/phpbench run --report=aeon"
        ],
        "build": [
            "@static:analyze",
            "@test",
            "@test:mutation"
        ],
        "test": [
            "tools/vendor/bin/phpunit"
        ],
        "test:mutation": [
            "Composer\\Config::disableProcessTimeout",
            "tools/vendor/bin/infection -j2"
        ],
        "static:analyze": [
            "tools/vendor/bin/psalm --output-format=compact",
            "tools/vendor/bin/phpstan analyze -c phpstan.neon",
            "tools/vendor/bin/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools/vendor/bin/php-cs-fixer fix",
        "tools:install": "composer install --working-dir=./tools",
        "post-install-cmd": [
            "@tools:install"
        ],
        "post-update-cmd": [
            "@tools:install"
        ]
    },
    "prefer-stable": true
}
