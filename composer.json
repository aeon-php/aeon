{
    "name": "aeon-php/calendar-twig",
    "type": "library",
    "description": "PHP type safe, immutable calendar library",
    "keywords": ["calendar", "immutable", "twig", "extension"],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4.2",
        "aeon-php/calendar": ">=0.14.0",
        "twig/twig": "^1.43|^2.10|^3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aeon\\": [
                "src/Aeon"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeon\\Twig\\Tests\\": "tests/Aeon/Twig/Tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "@static:analyze",
            "@test",
            "@test:mutation"
        ],
        "test": [
            "tools/phpunit.phar"
        ],
        "test:mutation": [
            "tools/infection -j2"
        ],
        "static:analyze": [
            "tools/psalm --output-format=compact",
            "tools/phpstan analyze -c phpstan.neon",
            "tools/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools/php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-latest": "1.0-dev"
        }
    }
}
