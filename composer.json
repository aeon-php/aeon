{
    "name": "aeon-php/calendar-holidays-yasumi",
    "type": "library",
    "description": "Bridge for Aeon Calendar Holidays library and Yasumi",
    "keywords": ["calendar", "immutable", "holidays", "yasumi", "bridge"],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4.2 || ^8.0 || ^8.1",
        "aeon-php/calendar-holidays": ">=0.8.0 ^0",
        "azuyalabs/yasumi": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aeon\\": [
                "src/Aeon"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeon\\Calendar\\Tests\\": "tests/Aeon/Calendar/Tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "@static:analyze",
            "@test"
        ],
        "test": [
            "tools/vendor/bin/phpunit"
        ],
        "static:analyze": [
            "tools/vendor/bin/psalm --output-format=compact",
            "tools/vendor/bin/phpstan analyze -c phpstan.neon",
            "tools/vendor/bin/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools/vendor/bin/php-cs-fixer fix",
        "tools:install": "composer install --working-dir=./tools",
        "post-install-cmd": [
            "@tools:install"
        ],
        "post-update-cmd": [
            "@tools:install"
        ]
    }
}
