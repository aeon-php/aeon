{
    "name": "aeon-php/calendar-twig",
    "type": "library",
    "description": "PHP type safe, immutable calendar library",
    "keywords": ["calendar", "immutable", "twig", "extension"],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4.2",
        "aeon-php/calendar": ">=0.18.0",
        "twig/twig": "^1.43|^2.10|^3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aeon\\": [
                "src/Aeon"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeon\\Twig\\Tests\\": "tests/Aeon/Twig/Tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "@static:analyze",
            "@test",
            "@test:mutation"
        ],
        "test": [
            "tools\/vendor\/bin\/phpunit"
        ],
        "test:mutation": [
            "tools\/vendor\/bin\/infection -j2"
        ],
        "static:analyze": [
            "tools\/vendor\/bin\/psalm --output-format=compact",
            "tools\/vendor\/bin\/phpstan analyze -c phpstan.neon",
            "tools\/vendor\/bin\/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools\/vendor\/bin\/php-cs-fixer fix",
        "tools:install": "composer install --working-dir=./tools",
        "post-install-cmd": [
            "@tools:install"
        ],
        "post-update-cmd": [
            "@tools:install"
        ]
    }
}
